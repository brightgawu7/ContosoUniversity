@page "/Students"
@inject IStudentService studentService
@inject IStudentState studentState

<h2 class="text-4xl my-4 font-medium">Students</h2>

<NavLink href="/create-student" class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 ">Create New</NavLink>










<div class=" relative overflow-x-auto shadow-md sm:rounded-lg mt-6">
	<table class="w-full text-sm text-left text-gray-500 ">
		<thead class="text-xs text-gray-700 uppercase bg-gray-50 ">
			<tr class="font-medium text-black-primary">
				<th scope="col" class="px-6 py-3">
					Last Name
				</th>
				<th scope="col" class="px-6 py-3">
					First Name
				</th>
				<th scope="col" class="px-6 py-3">
					Enrollment Date
				</th>
			</tr>
		</thead>
		<tbody>
			@if (studentState.Students != null)
			{
				@foreach (var item in studentState.Students)
				{
					<tr class="bg-white border-b ">
						<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap ">
							@item.LastName
						</th>
						<td class="px-6 py-4">
							@item.FirstMidName
						</td>
						<td class="px-6 py-4">
							@item.FirstMidName
						</td>
						<td class="px-6 py-4">
							<NavLink href=@($"Students/Edit/{item.Id}") class="font-medium text-blue-600  hover:underline">Edit</NavLink> |
							<NavLink href=@($"Students/Details/{item.Id}") class="font-medium text-blue-600  hover:underline">Details</NavLink> |
							<NavLink href=@($"/Students/Delete/{item.Id}") class="font-medium text-blue-600  hover:underline">Delete</NavLink>
						</td>
					</tr>

				}


			}
		</tbody>
	</table>
</div>










@code {
	protected override async Task OnInitializedAsync()
	{
		await studentService.GetStudents();
	}
}
